<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    tools:context=".MainActivity">

    <studio.zewei.willy.arrowtooltiplayout.ArrowTooltipLayout
        android:layout_width="150dp"
        android:layout_height="100dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Sample 1"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </studio.zewei.willy.arrowtooltiplayout.ArrowTooltipLayout>

    <studio.zewei.willy.arrowtooltiplayout.ArrowTooltipLayout
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        app:arrowHeight="30dp"
        app:arrowOrientation="end"
        app:arrowWidth="20dp"
        app:positionPercentage="0.65"
        app:tipLayoutColor="@color/colorPrimaryDark"
        app:tipLayoutRadius="0dp"
        app:tipLayoutStyle="fill">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:text="Sample 2"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </studio.zewei.willy.arrowtooltiplayout.ArrowTooltipLayout>

    <studio.zewei.willy.arrowtooltiplayout.ArrowTooltipLayout
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        app:arrowHeight="20dp"
        app:arrowOrientation="bottom"
        app:arrowWidth="20dp"
        app:positionPercentage="0.5"
        app:tipLayoutColor="#FF5722"
        app:tipLayoutRadius="40dp"
        app:tipLayoutStyle="fill">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Sample 3"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </studio.zewei.willy.arrowtooltiplayout.ArrowTooltipLayout>

    <studio.zewei.willy.arrowtooltiplayout.ArrowTooltipLayout
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        app:arrowHeight="10dp"
        app:arrowOrientation="start"
        app:arrowWidth="20dp"
        app:positionPercentage="0.3"
        app:tipLayoutColor="#E91E63"
        app:tipLayoutRadius="10dp"
        app:tipLayoutStyle="stroke">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample 4"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </studio.zewei.willy.arrowtooltiplayout.ArrowTooltipLayout>
</LinearLayout>